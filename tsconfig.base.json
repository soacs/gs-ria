      "@ria/options/feature-orders": ["libs/trading/options/feature-orders/src/index.ts"],
      "@ria/settings": ["libs/settings/src/index.ts"],
      "@ria/trading/domain": ["libs/trading/domain/src/index.ts"],
      "@ria/trading/feature-allocation": ["libs/trading/feature-allocation/src/index.ts"],
      "@ria/trading/feature-app-load": ["libs/trading/feature-app-load/src/index.ts"],
