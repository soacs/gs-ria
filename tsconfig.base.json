      "@shared/ag-grid": ["libs/shared/ag-grid/src/index.ts"],
      "@shared/aws-integration": ["libs/shared/aws-integration/src/index.ts"],
      "@shared/core": ["libs/shared/core/src/index.ts"],
      "@shared/investing": ["libs/shared/investing/src/index.ts"],
      "@shared/loader": ["libs/shared/loader/src/index.ts"],
      "@shared/material": ["libs/shared/material/src/index.ts"],
      "@shared/security": ["libs/shared/security/src/index.ts"],
      "@shared/ui-allocation": ["libs/shared/ui-allocation/src/index.ts"],
      "@shared/ui-integration": ["libs/shared/ui-integration/src/index.ts"],
      "rxjs": ["node_modules/rxjs"],
